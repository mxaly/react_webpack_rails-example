= form_for @email, html: { class: "form-horizontal", role: "form" } do |f|
  -if @email.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@email.errors.count, "error")} prohibited this email from being saved:"

      %ul
        - @email.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :body, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :body, class: 'form-control'
  .form-group
    = f.label :from, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :from, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
